{# admin.hp #} {% include 'admin/common/header.twig' %} {% include 'admin/common/menu.twig' %}

<div class="container-fluid" id="articles-index">
    <div class="row">
        {% include 'admin/common/sidebar.twig' %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Artikel</h1>
            <table id="articlesTable" class="table table-striped table-bordered table-data-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Beschreibung</th>
                        <th class="sorting_disabled">Bild</th>
                        <th class="sorting_disabled">Aktion</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="articleDetailsModal" tabindex="-1" role="dialog" aria-labelledby="articleDetailsModalTitle" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="articleDetailsModalTitle">Artikeldetails</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                    <button type="button" class="btn btn-primary" id="btn-articledetails-save">Speichern</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Articletypedetails -->
    <div class="modal fade modal-abodetails" id="articletypeDetailsModal" tabindex="-1" role="dialog" aria-labelledby="articletypeDetailsModalTitle">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="articletypeDetailsModalTitle">Abodetails</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" id="btn-articletype-details-close">Schliessen</button>
                    <button type="button" class="btn btn-primary" id="btn-articletype-save">Speichern</button>
                </div>
            </div>
        </div>
    </div>
</div>

{% include 'admin/common/footer.twig' %}