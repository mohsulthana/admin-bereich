{# admin.hp #}
{% include 'admin/common/header.twig' %}

{% include 'admin/common/menu.twig' %}

<div class="container-fluid" id="abos-index">
    <div class="row">
        {% include 'admin/common/sidebar.twig' %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Abonnements</h1>
            <table id="abosTable" class="table table-striped table-bordered table-data-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Beschreibung</th>
                        <th>Preis</th>
                        <th class="sorting_disabled">Bild</th>
                        <th class="sorting_disabled">Aktion</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="aboDetailsModal" tabindex="-1" role="dialog" aria-labelledby="aboDetailsModalTitle">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="aboDetailsModalTitle">Abodetails</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                    <button type="button" class="btn btn-primary" id="btn-abodetails-save">Speichern</button>
                </div>
            </div>
        </div>
    </div>
</div>

{% include 'admin/common/footer.twig' %}
