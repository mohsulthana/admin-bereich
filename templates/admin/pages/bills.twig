{# admin.hp #} {% include 'admin/common/header.twig' %} {% include 'admin/common/menu.twig' %}

<div class="container-fluid" id="users-index">
    <div class="row">
        {% include 'admin/common/sidebar.twig' %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <h1 class="page-header">Guthaben</h1>
            <table id="usersTable" class="table table-striped table-bordered table-data-table" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Region</th>
                        <th>Strasse</th>
                        <th>PLZ</th>
                        <th>Ort</th>
                        <th class="sorting_disabled">Aktiv</th>
                        <th class="sorting_disabled datatable-action-td">Aktion</th>
                        <th>Abo</th>
                        <th>Guthaben</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <!-- Modal Userdetails -->
    <div class="modal fade" id="userDetailsModal" tabindex="-1" role="dialog" aria-labelledby="userDetailsModalTitle" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-lg modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="userDetailsModalTitle">Kundendetails</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Schliessen</button>
                    <button type="button" class="btn btn-primary" id="btn-userdetails-save">Speichern</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Abodetails -->
    <div class="modal fade modal-abodetails" id="aboDetailsModal" tabindex="-1" role="dialog" aria-labelledby="aboDetailsModalTitle">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="aboDetailsModalTitle">Abodetails</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" id="btn-abo-details-close">Schliessen</button>
                    <button type="button" class="btn btn-primary" id="btn-abodetails-save">Speichern</button>
                </div>
            </div>
        </div>
    </div>
</div>

{% include 'admin/common/footer.twig' %}