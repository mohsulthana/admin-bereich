<div class="container-fluid" id="deliverynotes-index">
    <div class="row">
        {% include 'admin/common/sidebar.twig' %}
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <form class="form" role="form" method="post" target="_blank" action="/admin/create/deliverynotes" accept-charset="UTF-8" id="deliverynotes-create-form">
                <h1 class="page-header">Lieferscheine</h1>
                <div class="form-group">
                    <label for="selectedRegions" style="display:block">Regionen</label>
                    <select id="selectedRegions" name="selectedRegions[]" multiple>
                        {% for region in regions %}
                        <option value="{{ region.id }}">{{ region.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-success" id="btn-create-deliverynotes" disabled>Lieferscheine erstellen</button>
            </form>
        </div>
    </div>
</div>

